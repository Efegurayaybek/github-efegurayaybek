                        <Button fx:id="playAgainButton" onAction="#handlePlayAgain" styleClass="btn-primary" text="ðŸ”„ Play Again" />
                        <Button fx:id="exitButton" onAction="#handleExit" styleClass="btn-secondary" text="ðŸšª Exit" />
                    </children>
                </HBox>

                <!-- Leaderboard -->
                <VBox spacing="10.0" styleClass="leaderboard-container">
                    <children>
                        <Label text="ðŸ† Leaderboard" styleClass="leaderboard-title" />
                        <ScrollPane fitToWidth="true" maxHeight="200.0" styleClass="leaderboard-scroll">
                            <content>
                                <VBox fx:id="leaderboardBox" spacing="5.0" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>

        <!-- Bottom Control Info -->
        <VBox alignment="BOTTOM_CENTER" spacing="5.0" styleClass="controls-info" StackPane.alignment="BOTTOM_CENTER">
            <children>
                <Label text="ðŸŽ® Controls: SPACE key or mouse click to jump!" styleClass="controls-text" />
                <Label text="ðŸŒŸ Easy mode: Smooth controls and wider gaps" styleClass="easy-mode-text" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</StackPane>